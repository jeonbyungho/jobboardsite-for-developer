<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias alias="Member" type="com.jobboard.auth.model.Member"/>
		<typeAlias alias="Employer" type="com.jobboard.auth.model.Employer"/>
		<typeAlias alias="BusinessMember" type="com.jobboard.auth.model.BusinessMember"/>
		<typeAlias alias="RecruitmentBulletin" type="com.jobboard.recruit.model.RecruitmentBulletin"/>
		<typeAlias alias="Pagination" type="com.jobboard.web.model.Pagination"/>
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
		        <property name="url" value="jdbc:oracle:thin:@//localhost:1521/XE"/>
		        <property name="username" value="jobboard"/>
		        <property name="password" value="1234"/>
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource="mybatis/EmployerMapper.xml"/>
		<mapper resource="mybatis/BusinessMemberMapper.xml"/>
		<mapper resource="mybatis/RecruitmentBulletinMapper.xml"/>
	</mappers>
</configuration>